# AI-assisted Clinical Forms Frontend Configuration

# Backend API Configuration
# URL of the backend API service
BACKEND_API_URL=http://localhost:8000

# Default Doctor Configuration
# Default doctor ID and name for demo purposes
DEFAULT_DOCTOR_ID=D001
DEFAULT_DOCTOR_NAME=Dr. Demo

# AI/ASR Configuration
# Automatic Speech Recognition model to use
ASR_MODEL=whisper-small
# Enable AI autofill from microphone transcription
AI_AUTOFILL_ENABLED=true

# Audio Configuration
# Sample rate for audio processing (Hz)
AUDIO_SAMPLE_RATE=16000
# Audio chunk size for processing
AUDIO_CHUNK_SIZE=1024

# UI Configuration
# Number of patients to show per page in dashboard
PATIENTS_PER_PAGE=12
# Maximum number of transcript lines to keep in memory
TRANSCRIPT_MAX_LINES=50

# Development Settings
# Enable debug mode for additional logging
DEBUG=false
# Use mock API instead of real backend (for development)
MOCK_API=true

# OpenAI Configuration (if using OpenAI for AI extraction)
# OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (if using real database)
# DATABASE_URL=postgresql://user:password@localhost:5432/clinical_forms

# WebSocket Configuration (for real-time audio streaming)
# WEBSOCKET_URL=ws://localhost:8000/ws/audio
